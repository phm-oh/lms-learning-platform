{
  "name": "lms-platform-backend",
  "version": "1.0.0",
  "description": "Learning Management System Backend with ML Predictions",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:create": "node src/utils/database/createDatabase.js",
    "db:migrate": "node src/utils/database/migrate.js",
    "db:seed": "node src/utils/database/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docs": "apidoc -i src/routes/ -o docs/",
    "build": "echo 'No build step needed for Node.js'",
    "postinstall": "npm run db:create"
  },
  "keywords": [
    "lms",
    "learning-management-system",
    "education",
    "nodejs",
    "express",
    "postgresql",
    "sequelize",
    "jwt",
    "socket.io",
    "machine-learning"
  ],
  "author": "LMS Platform Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "sequelize": "^6.32.1",
    "pg": "^8.11.1",
    "pg-hstore": "^2.3.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "joi": "^17.9.2",
    "express-rate-limit": "^6.8.1",
    "socket.io": "^4.7.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5",
    "express-validator": "^7.0.1",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.7",
    "axios": "^1.4.0",
    "form-data": "^4.0.0",
    "sharp": "^0.32.3",
    "pdf-lib": "^1.17.1",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "express-winston": "^4.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "apidoc": "^0.54.0",
    "cross-env": "^7.0.3",
    "sqlite3": "^5.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/utils/database/*.js",
      "!src/config/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/lms-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/lms-platform/issues"
  },
  "homepage": "https://github.com/your-username/lms-platform#readme"
}