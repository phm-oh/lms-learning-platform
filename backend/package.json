{
  "name": "lms-backend",
  "version": "1.0.0",
  "description": "LMS Backend API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    
    "db:create": "node src/utils/database/createDatabase.js",
    "db:migrate": "node src/utils/database/migrate.js",
    "db:seed": "node src/utils/database/seed.js",
    "db:reset": "node src/utils/database/reset.js",
    "db:setup": "node src/utils/database/setupComplete.js",
    
    "db:drop": "PGPASSWORD=$DB_PASSWORD dropdb -h $DB_HOST -p $DB_PORT -U $DB_USER $DB_NAME",
    "db:recreate": "npm run db:drop && npm run db:setup"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "sequelize": "^6.32.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.3",
    "socket.io": "^4.7.2",
    "csv-parser": "^3.0.0",
    "joi": "^17.9.2",
    "dotenv": "^16.3.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3"
  }
}